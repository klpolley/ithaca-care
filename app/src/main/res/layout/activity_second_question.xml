<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.icwc.volunteerapp.SecondQuestion">

    <ImageButton
        android:id="@+id/op2A"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:adjustViewBounds="false"
        android:background="#0000"
        android:cropToPadding="false"
        android:elevation="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@drawable/kids" />

    <ImageButton
        android:id="@+id/op2B"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/op2A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@drawable/poverty" />

    <ImageButton
        android:id="@+id/op2C"
        android:layout_width="210dp"
        android:layout_height="250dp"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/op2A"
        app:srcCompat="@drawable/community" />

    <ImageButton
        android:id="@+id/op2D"
        android:layout_width="202dp"
        android:layout_height="250dp"
        android:background="#0000"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/op2C"
        app:layout_constraintTop_toBottomOf="@+id/op2B"
        app:srcCompat="@drawable/envirotarget" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="420dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/target" />

</android.support.constraint.ConstraintLayout>
